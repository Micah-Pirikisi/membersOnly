<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Members Only</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <h1>Members Only</h1>

    <% if (user) { %>
    <p>Welcome, <%= user.first_name %>!</p>
    <div style="margin-bottom: 2rem;">
      <a href="/logout">Logout</a> | <a href="/messages/new">New Message</a>
    </div>
    <% } else { %>
    <div style="margin-bottom: 2rem;">
      <a href="/signup">Sign Up</a> | <a href="/login">Login</a>
    </div>
    <% } %>

    <h2>Recent Messages</h2>
    <ul>
      <% messages.forEach(msg => { %>
      <li>
        <strong><%= msg.title %></strong><br />
        <%= msg.body %><br />
        <% if (user) { %>
        <small>
          Posted by <%= msg.first_name %> <%= msg.last_name %> on <%=
          msg.created_at.toDateString() %>
        </small>
        <% } %> <% if (user && user.admin) { %>
        <form
          action="/messages/<%= msg.message_id %>/delete"
          method="POST"
          style="display: inline"
        >
          <button type="submit">Delete</button>
        </form>
        <% } %>
      </li>
      <% }) %>
    </ul>
  </body>
</html>
