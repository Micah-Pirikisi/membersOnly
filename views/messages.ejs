<!DOCTYPE html>
<html>
  <head>
    <title>Messages</title>
  </head>
  <body>
    <h1>All Messages</h1>
    <% if (user) { %>
    <p>Welcome, <%= user.first_name %>!</p>
    <a href="/messages/new">New Message</a> | <a href="/logout">Logout</a>
    <% } else { %>
    <a href="/login">Login</a> | <a href="/signup">Sign Up</a>
    <% } %>

    <ul>
      <% messages.forEach(msg => { %>
      <li>
        <strong><%= msg.title %></strong><br />
        <%= msg.body %><br />
        <small
          >Posted by <%= msg.first_name %> <%= msg.last_name %> on <%=
          msg.created_at.toDateString() %></small
        >
      </li>
      <% }) %>
    </ul>
  </body>
</html>
